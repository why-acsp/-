packagecom.example.myapplication;  //메인메뉴. 

importandroid.content.Intent;
importandroid.graphics.Bitmap;
importandroid.graphics.Canvas;
importandroid.os.Bundle;
importandroid.support.annotation.Nullable;
importandroid.support.v7.app.AppCompatActivity;
importandroid.view.View;
importandroid.widget.Button;
importandroid.widget.ImageView;
importandroid.graphics.Paint;
importandroid.widget.LinearLayout;

publicclassmainmenuextendsAppCompatActivity{
LinearLayoutmain_layout;
@Override
protectedvoidonCreate(@NullableBundlesavedInstanceState){
super.onCreate(savedInstanceState);
setContentView(R.layout.mainmenu);
main_layout=(LinearLayout)findViewById(R.id.main_layout);
ButtonOneButton=(Button)findViewById(R.id.circle_button);
OneButton.setOnClickListener(newView.OnClickListener(){
@Override
publicvoidonClick(Viewview){
Intentintent=newIntent(getApplicationContext(),button_option.class);
startActivity(intent);
Bitmapmybitmap=Bitmap.createBitmap(500,500,Bitmap.Config.ARGB_8888);
Canvasmycanvas=newCanvas(mybitmap);
mycanvas.drawColor(getResources().getColor(R.color.white));
Paintmypaint=newPaint();
mypaint.setColor(getResources().getColor(R.color.black));
mypaint.setStrokeWidth(5.0f);
mycanvas.drawLine(0,0,250,250,mypaint);
ImageViewmyimageview=newImageView(mainmenu.this);
myimageview.setImageBitmap(mybitmap);
main_layout.addView(myimageview);
}
});

ButtonSecondButton=(Button)findViewById(R.id.point_button);
SecondButton.setOnClickListener(newView.OnClickListener(){
@Override
publicvoidonClick(Viewview){
Intentintent1=newIntent(getApplicationContext(),pointbutton_option.class);
startActivity(intent1);
Bitmapmybitmap=Bitmap.createBitmap(500,500,Bitmap.Config.ARGB_8888);
Canvasmycanvas=newCanvas(mybitmap);
mycanvas.drawColor(getResources().getColor(R.color.white));
Paintmypaint=newPaint();
mypaint.setColor(getResources().getColor(R.color.black));
mypaint.setStrokeWidth(5.0f);
mycanvas.drawLine(0,0,250,250,mypaint);
ImageViewmyimageview=newImageView(mainmenu.this);
myimageview.setImageBitmap(mybitmap);
main_layout.addView(myimageview);
